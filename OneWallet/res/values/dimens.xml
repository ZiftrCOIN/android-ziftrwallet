<resources>

    <dimen name="subActionBarDividerHeight">3dp</dimen>
    <!-- Default screen margins, per the Android Design guidelines. -->
    <dimen name="activity_horizontal_margin">16dp</dimen>
    <dimen name="activity_vertical_margin">16dp</dimen>
    
    <dimen name="ow_send_receive_list_spacing_top_margin">5dp</dimen>
    <dimen name="ow_send_receive_list_block_padding">5dp</dimen>
    
    <!-- These are for icons that do have a border built in. -->
    <dimen name="ow_bordered_icon_margin">4dp</dimen>
    
    <!-- These are for icons that don't have a border built in. -->
    <dimen name="ow_borderless_icon_margin">6dp</dimen>
    
    <!-- 2*margin + size == empty_space_padding -->
    <dimen name="ow_total_icon_side_length">45dp</dimen>
    
    <!-- Half of the icon size -->
    <dimen name="ow_half_icon_size">20dp</dimen>
    <!-- Quarter of the icon size -->
    <dimen name="ow_quarter_icon_size">10dp</dimen>
    
    <dimen name="ow_tx_list_divider_padding">10dp</dimen>
    <dimen name="ow_tx_list_item_padding">10dp</dimen>
    <dimen name="ow_tx_list_divider_bottom_margin">5dp</dimen>
    
    <dimen name="ow_button_footer_height">60dp</dimen>
    
    <!-- txn details text sizes -->
    <dimen name="ow_txn_large">65dp</dimen>
    <dimen name="ow_txn_medium">28dp</dimen>
    <dimen name="ow_txn_small">22dp</dimen>
    
    <dimen name="ow_edit_text_padding">5dp</dimen>
    <dimen name="ow_edit_text_height">@dimen/ow_total_icon_side_length</dimen>
    
</resources>
