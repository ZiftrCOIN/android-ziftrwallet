<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Action bar theme -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/ow_action_bar_color</item>

        <!-- Support library compatibility -->
        <item name="background">@color/ow_action_bar_color</item>
    </style>


    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- <item name="android:windowNoTitle">true</item> -->
    </style>

    <!-- transactions page style -->
    <style name="txn_labels">
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">@dimen/ow_txn_small</item>
    </style>

    <style name="txn_values">
        <item name="android:textColor">@color/DarkGray</item>
        <item name="android:textSize">@dimen/ow_txn_medium</item>
    </style>

    <!-- dialog styles -->
    <style name="dialog_title_text" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_button" parent="@android:attr/buttonBarButtonStyle">
        <item name="android:background">@drawable/dialog_button</item>
    </style>

</resources>