<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:gravity="center_vertical" >

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="0dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical" >

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ow_send_receive_list_spacing_top_margin"
                    android:background="@color/ow_send_receive_list_background"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/ow_total_icon_side_length"
                    android:paddingRight="@dimen/ow_total_icon_side_length"
                    android:paddingTop="5dp" >

                    <TextView
                        android:id="@+id/sendToAddressTitleView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:gravity="left"
                        android:text="@string/ow_send_to_address"
                        android:textColor="@color/White" >
                    </TextView>

                    <EditText
                        android:id="@+id/sendEditTextReceiverAddress"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sendToAddressTitleView"
                        android:ems="1"
                        android:inputType="text" >
                    </EditText>
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ow_send_receive_list_spacing_top_margin"
                    android:background="@color/ow_send_receive_list_background"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/ow_total_icon_side_length"
                    android:paddingRight="@dimen/ow_total_icon_side_length"
                    android:paddingTop="5dp" >

                    <TextView
                        android:id="@+id/sendToNameTitle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:gravity="left"
                        android:text="@string/ow_send_to_address_name"
                        android:textColor="@color/White" >
                    </TextView>

                    <EditText
                        android:id="@+id/send_edit_text_reciever_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/sendToNameTitle"
                        android:ems="1"
                        android:inputType="text" >
                    </EditText>
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ow_send_receive_list_spacing_top_margin"
                    android:background="@color/ow_send_receive_list_background"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/ow_total_icon_side_length"
                    android:paddingRight="@dimen/ow_total_icon_side_length"
                    android:paddingTop="5dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/ow_send_receive_list_background"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="left"
                            android:text="@string/ow_send_amount"
                            android:textColor="@color/White" >
                        </TextView>

                        <EditText
                            android:id="@+id/sendEditTextAmount"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="1"
                            android:inputType="numberDecimal" >
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:background="@color/ow_send_receive_list_background"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="left"
                            android:text="@string/ow_send_amount_equivalent"
                            android:textColor="@color/White" >
                        </TextView>

                        <EditText
                            android:id="@+id/sendEditTextAmountFiatEquiv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="1"
                            android:inputType="numberDecimal" >
                        </EditText>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ow_send_receive_list_spacing_top_margin"
                    android:background="@color/ow_send_receive_list_background"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/ow_total_icon_side_length"
                    android:paddingRight="@dimen/ow_total_icon_side_length"
                    android:paddingTop="5dp" >

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:gravity="left"
                            android:text="@string/ow_send_transaction_fee"
                            android:textColor="@color/White" >
                        </TextView>

                        <EditText
                            android:id="@+id/sendEditTextTransactionFee"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:ems="1"
                            android:inputType="text" >

                            <!--
                        android:clickable="false"
                        android:cursorVisible="false"
                        android:focusable="false"
                        android:focusableInTouchMode="false"
                            -->
                        </EditText>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical" >

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_margin="5dp"
                            android:ems="1"
                            android:gravity="left"
                            android:text="@string/ow_send_amount_equivalent"
                            android:textColor="@color/White" >
                        </TextView>

                        <EditText
                            android:id="@+id/sendEditTextTransactionFeeFiatEquiv"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:clickable="false"
                            android:cursorVisible="false"
                            android:ems="1"
                            android:focusable="false"
                            android:focusableInTouchMode="false"
                            android:inputType="text" >
                        </EditText>
                    </LinearLayout>
                </LinearLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ow_send_receive_list_spacing_top_margin"
                    android:background="@color/ow_send_receive_list_background"
                    android:orientation="vertical"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/ow_total_icon_side_length"
                    android:paddingRight="@dimen/ow_total_icon_side_length"
                    android:paddingTop="5dp" >

                    <TextView
                        android:id="@+id/sendTotalTitleTextView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentTop="true"
                        android:layout_gravity="center"
                        android:layout_margin="5dp"
                        android:gravity="left"
                        android:text="@string/ow_send_total"
                        android:textColor="@color/White" >
                    </TextView>

                    <TextView
                        android:id="@+id/sendTotalTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentLeft="true"
                        android:layout_below="@id/sendTotalTitleTextView"
                        android:layout_gravity="bottom"
                        android:layout_margin="5dp"
                        android:gravity="bottom"
                        android:text="@string/ow_send_default_total"
                        android:textSize="24sp" >
                    </TextView>

                    <TextView
                        android:id="@+id/sendTotalFiatEquivTextView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@id/sendTotalTextView"
                        android:layout_margin="5dp"
                        android:layout_toRightOf="@id/sendTotalTextView"
                        android:gravity="bottom"
                        android:text="@string/ow_send_default_total_fiat_equiv" >
                    </TextView>

                    <!--
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="60dp"
                    android:layout_gravity="bottom"
                    android:layout_margin="0dp"
                    android:gravity="bottom"
                    android:orientation="horizontal"
                    android:padding="0dp" >
                </LinearLayout>
                    -->
                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/ow_send_receive_list_spacing_top_margin"
                    android:background="@color/ow_send_receive_list_background"
                    android:baselineAligned="false"
                    android:orientation="horizontal"
                    android:paddingBottom="5dp"
                    android:paddingLeft="@dimen/ow_total_icon_side_length"
                    android:paddingRight="@dimen/ow_total_icon_side_length"
                    android:paddingTop="5dp" >

                    <ImageView
                        android:id="@+id/send_paste_icon"
                        android:layout_width="@dimen/ow_total_icon_side_length"
                        android:layout_height="@dimen/ow_total_icon_side_length"
                        android:layout_gravity="center"
                        android:padding="@dimen/ow_bordered_icon_margin"
                        android:background="@android:color/transparent"
                        android:contentDescription="@string/ow_old_passphrase_hint"
                        android:src="@drawable/copy_enabled" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >
                    </View>

                    <ImageView
                        android:id="@+id/send_qr_icon"
                        android:layout_width="@dimen/ow_total_icon_side_length"
                        android:layout_height="@dimen/ow_total_icon_side_length"
                        android:layout_gravity="center"
                        android:padding="@dimen/ow_bordered_icon_margin"
                        android:contentDescription="@string/ow_old_passphrase_hint"
                        android:src="@drawable/qrcode_enabled" />

                    <View
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="1" >
                    </View>

                    <ImageView
                        android:id="@+id/sendGetAddressFromHistoryIcon"
                        android:layout_width="@dimen/ow_total_icon_side_length"
                        android:layout_height="@dimen/ow_total_icon_side_length"
                        android:layout_gravity="center"
                        android:padding="@dimen/ow_bordered_icon_margin"
                        android:contentDescription="@string/ow_old_passphrase_hint"
                        android:src="@drawable/from_history_icon" />
                </LinearLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <include
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="0dp"
        layout="@layout/_dual_button_footer"
        android:padding="0dp" />

</LinearLayout>