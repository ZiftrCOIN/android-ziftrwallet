<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="0dp" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:duplicateParentState="true"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/addressValueLayout"
            style="@style/send_receive_block_containers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ow_send_receive_list_spacing_top_margin"
            android:orientation="vertical"
            android:paddingLeft="0dp"
            android:paddingRight="0dp" >

            <ImageView
                android:id="@+id/recallAddressFromHistoryIcon"
                android:layout_width="@dimen/ow_total_icon_side_length"
                android:layout_height="@dimen/ow_total_icon_side_length"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:clickable="true"
                android:contentDescription="@string/ow_empty_string"
                android:padding="@dimen/ow_borderless_icon_margin"
                android:src="@drawable/from_history" />

            <ImageView
                android:id="@+id/generateNewAddressIcon"
                android:layout_width="@dimen/ow_total_icon_side_length"
                android:layout_height="@dimen/ow_total_icon_side_length"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:clickable="true"
                android:contentDescription="@string/ow_empty_string"
                android:gravity="center"
                android:padding="@dimen/ow_bordered_icon_margin"
                android:src="@drawable/add_white_icon_clickable" />

            <TextView
                android:id="@+id/addressValueTitleTextView"
                style="@style/send_receive_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/generateNewAddressIcon"
                android:layout_toLeftOf="@id/generateNewAddressIcon"
                android:layout_toRightOf="@id/recallAddressFromHistoryIcon"
                android:text="@string/ow_receive_coins_address_value_box_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/ow_edit_text_height"
                android:layout_below="@id/addressValueTitleTextView"
                android:layout_toLeftOf="@id/generateNewAddressIcon"
                android:layout_toRightOf="@id/recallAddressFromHistoryIcon"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/receiveCopyIcon"
                    android:layout_width="@dimen/ow_total_icon_side_length"
                    android:layout_height="@dimen/ow_edit_text_height"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:background="@color/ow_copy_icon_next_to_text_color"
                    android:clickable="true"
                    android:contentDescription="@string/ow_empty_string"
                    android:padding="@dimen/ow_bordered_icon_margin"
                    android:src="@drawable/copy_icon_clickable" />

                <EditText
                    android:id="@+id/addressValueTextView"
                    style="@style/send_receive_edit_text"
                    android:layout_width="match_parent"
                    android:layout_alignTop="@id/receiveCopyIcon"
                    android:layout_toLeftOf="@id/receiveCopyIcon"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:ellipsize="end"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:inputType="text"
                    android:maxLines="1"
                    android:scrollHorizontally="true"
                    android:singleLine="true"
                    android:text="@string/ow_receive_coins_address_value_default" >
                </EditText>
            </RelativeLayout>
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/addressNameLayout"
            style="@style/send_receive_block_containers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/ow_send_receive_list_spacing_top_margin"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/addressNameTitleTextView"
                style="@style/send_receive_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/ow_receive_coins_address_note_box_title" />

            <EditText
                android:id="@+id/addressNameEditText"
                style="@style/send_receive_edit_text"
                android:layout_width="match_parent"
                android:inputType="textPersonName" >

                <requestFocus />
            </EditText>
        </LinearLayout>

        <ImageView
            android:id="@+id/show_qr_img"
            android:layout_width="250dp"
            android:layout_height="250dp"
            android:layout_gravity="center"
            android:layout_margin="@dimen/ow_borderless_icon_margin"
            android:contentDescription="@string/ow_empty_string"
            android:src="@drawable/qrcode_enabled" />
    </LinearLayout>

</ScrollView>