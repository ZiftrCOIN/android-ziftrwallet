<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/widget_bg_shape"
    android:orientation="horizontal" >

    <LinearLayout
        android:id="@+id/widget_change_coin"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@drawable/widget_click_color"
        android:clickable="true"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/widget_select_coin"
            android:layout_width="@dimen/ow_medium_icon_side_length"
            android:layout_height="@dimen/ow_medium_icon_side_length"
            android:layout_gravity="center_vertical"
            android:layout_margin="6dp"
            android:src="@drawable/logo_bitcoin" />

        <TextView
            android:id="@+id/widget_coin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:padding="2dp"
            android:shadowColor="#40000000"
            android:shadowDx="0"
            android:shadowDy="2"
            android:shadowRadius="1"
            android:text="Bitcoin"
            android:textColor="@color/ow_default_text"
            android:textSize="@dimen/ow_txt_mediumsmall" />
    </LinearLayout>

    <ImageView
        android:id="@+id/widget_send"
        android:layout_width="@dimen/ow_total_icon_side_length"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:background="@drawable/widget_click_color"
        android:clickable="true"
        android:padding="10dp"
        android:src="@drawable/send_button_icon" />

    <ImageView
        android:id="@+id/widget_receive"
        android:layout_width="@dimen/ow_total_icon_side_length"
        android:layout_height="match_parent"
        android:layout_toLeftOf="@id/widget_send"
        android:background="@drawable/widget_click_color"
        android:clickable="true"
        android:padding="10dp"
        android:src="@drawable/receive_button_icon" />

</RelativeLayout>