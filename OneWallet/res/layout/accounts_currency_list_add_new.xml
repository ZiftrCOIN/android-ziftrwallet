<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/addNewWalletBar"
    android:layout_width="match_parent"
    android:layout_height="@dimen/ow_total_icon_side_length"
    android:background="@color/ow_add_currency_list_item_background"
    android:orientation="horizontal" >

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_gravity="center_vertical"
        android:layout_margin="@dimen/ow_icon_margin"
        android:contentDescription="@string/add_new_wallet_content_description"
        android:src="@drawable/add_up" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="5dp"
        android:text="@string/add_currency" />

</LinearLayout>