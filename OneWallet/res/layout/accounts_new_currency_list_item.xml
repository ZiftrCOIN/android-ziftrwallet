<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/currency_list_selector"
        android:minHeight="@dimen/ow_total_icon_side_length"
        android:orientation="horizontal"
        android:padding="10dp" >

        <!-- ListRow Left side Thumbnail image -->

        <ImageView
            android:id="@+id/leftIcon"
            android:layout_width="@dimen/ow_total_icon_side_length"
            android:layout_height="@dimen/ow_total_icon_side_length"
            android:layout_alignParentLeft="true"
            android:contentDescription="@string/ow_empty_string"
            android:gravity="center_vertical"
            android:padding="@dimen/ow_bordered_icon_margin"
            android:src="@drawable/logo_bitcoin" />

        <TextView
            android:id="@+id/topLeftTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/leftIcon"
            android:layout_toRightOf="@+id/leftIcon"
            android:text="@string/ow_empty_string"
            android:textSize="15sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bottomLeftTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/leftIcon"
            android:layout_toLeftOf="@id/bottomRightTextView"
            android:layout_toRightOf="@id/leftIcon"
            android:clickable="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/ow_empty_string" />

        <CheckBox
            android:id="@+id/rightIcon"
            android:layout_width="@dimen/ow_checkbox_size"
            android:layout_height="@dimen/ow_checkbox_size"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@drawable/orange_checkbox"
            android:button="@null"
            android:contentDescription="@string/ow_empty_string"
            android:focusable="false"
            android:focusableInTouchMode="false"
            android:gravity="center_vertical" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/orangeSoda" />

</LinearLayout>