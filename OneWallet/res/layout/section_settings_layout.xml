<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ow_quarter_icon_size"
            android:background="@drawable/dropshadow" />

        <TextView
            style="@style/divider_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ow_currency" />

        <RelativeLayout
            android:id="@+id/select_fiat_currency"
            style="@style/settings_bar"
            android:background="@drawable/currency_list_selector"
            android:clickable="true" >

            <TextView
                android:id="@+id/currencyLabel"
                style="@style/setting_bar_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/ow_fiat_currency" />

            <ImageView
                android:id="@+id/fiat_arrow"
                android:layout_width="@dimen/ow_total_icon_side_length"
                android:layout_height="@dimen/ow_total_icon_side_length"
                android:layout_alignParentRight="true"
                android:padding="@dimen/ow_borderless_icon_margin"
                android:src="@drawable/previous_orange" />

            <TextView
                android:id="@+id/chosen_fiat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_toLeftOf="@+id/fiat_arrow"
                android:text="USD"
                android:textColor="@color/orangeSoda"
                android:textSize="@dimen/ow_txt_medium" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ow_quarter_icon_size"
            android:background="@drawable/dropshadow" />

        <TextView
            style="@style/divider_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ow_confirmation_fee" />

        <RelativeLayout
            android:id="@+id/editable_confirmation_fees_bar"
            style="@style/settings_bar"
            android:background="@drawable/currency_list_selector" >

            <TextView
                style="@style/setting_bar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/ow_editable_confirmation_fees" />

            <CheckBox
                android:id="@+id/editable_confirmation_fees"
                android:layout_width="@dimen/ow_checkbox_size"
                android:layout_height="@dimen/ow_checkbox_size"
                android:layout_alignParentRight="true"
                android:background="@drawable/orange_checkbox"
                android:button="@null"
                android:paddingBottom="@dimen/ow_quarter_icon_size"
                android:paddingTop="@dimen/ow_quarter_icon_size"
                android:text="@string/ow_empty_string" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ow_quarter_icon_size"
            android:background="@drawable/dropshadow" />

        <TextView
            style="@style/divider_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ow_passphrase" />

        <RelativeLayout
            android:id="@+id/reset_password_button"
            style="@style/settings_bar"
            android:background="@drawable/currency_list_selector" >

            <TextView
                android:id="@+id/reset_password_text"
                style="@style/setting_bar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/ow_reset_password" />

            <ImageView
                android:layout_width="@dimen/ow_total_icon_side_length"
                android:layout_height="@dimen/ow_total_icon_side_length"
                android:layout_alignParentRight="true"
                android:padding="@dimen/ow_borderless_icon_margin"
                android:src="@drawable/previous_orange" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/disable_passphrase"
            style="@style/settings_bar"
            android:layout_marginTop="1dp"
            android:background="@drawable/currency_list_selector" >

            <TextView
                style="@style/setting_bar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/ow_disable_passphrase" />

            <ImageView
                android:layout_width="@dimen/ow_total_icon_side_length"
                android:layout_height="@dimen/ow_total_icon_side_length"
                android:layout_alignParentRight="true"
                android:padding="@dimen/ow_borderless_icon_margin"
                android:src="@drawable/previous_orange" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ow_quarter_icon_size"
            android:background="@drawable/dropshadow" />

        <TextView
            style="@style/divider_label"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ow_name_label" />

        <RelativeLayout
            android:id="@+id/set_name_button"
            style="@style/settings_bar"
            android:background="@drawable/currency_list_selector" >

            <TextView
                android:id="@+id/set_name_label"
                style="@style/setting_bar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/ow_set_name_settings" />

            <ImageView
                android:layout_width="@dimen/ow_total_icon_side_length"
                android:layout_height="@dimen/ow_total_icon_side_length"
                android:layout_alignParentRight="true"
                android:padding="@dimen/ow_borderless_icon_margin"
                android:src="@drawable/previous_orange" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/disable_name_button"
            style="@style/settings_bar"
            android:layout_marginTop="1dp"
            android:background="@drawable/currency_list_selector" >

            <TextView
                style="@style/setting_bar_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/ow_disable_name" />

            <ImageView
                android:layout_width="@dimen/ow_total_icon_side_length"
                android:layout_height="@dimen/ow_total_icon_side_length"
                android:layout_alignParentRight="true"
                android:padding="@dimen/ow_borderless_icon_margin"
                android:src="@drawable/previous_orange" />
        </RelativeLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/ow_quarter_icon_size"
            android:background="@drawable/dropshadow" />

        <Button
            android:id="@+id/debug_button"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ow_button_footer_height"
            android:layout_marginTop="2dp"
            android:background="@drawable/clickable_button_color"
            android:textColor="@color/ow_default_text" />

        <Button
            android:id="@+id/export_db"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ow_button_footer_height"
            android:layout_marginTop="4dp"
            android:background="@drawable/clickable_button_color"
            android:text="Export wallet"
            android:textColor="@color/ow_default_text"
            android:visibility="gone" />

        <Button
            android:id="@+id/enable_logs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ow_button_footer_height"
            android:layout_marginTop="4dp"
            android:background="@drawable/clickable_button_color"
            android:text="Enable logs"
            android:textColor="@color/ow_default_text"
            android:visibility="gone" />

        <Button
            android:id="@+id/export_logs"
            android:layout_width="match_parent"
            android:layout_height="@dimen/ow_button_footer_height"
            android:layout_marginTop="4dp"
            android:background="@drawable/clickable_button_color"
            android:text="Export logs"
            android:textColor="@color/ow_default_text"
            android:visibility="gone" />
    </LinearLayout>

</ScrollView>