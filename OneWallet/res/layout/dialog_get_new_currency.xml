<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include layout="@layout/custom_dialog_title" />

    <include layout="@layout/custom_dialog_message" />

    <GridView
        android:id="@+id/addNewCurrencyGridView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:columnWidth="80dp"
        android:gravity="center"
        android:horizontalSpacing="@dimen/ow_icon_margin"
        android:listSelector="@drawable/new_currency_grid_selector"
        android:numColumns="auto_fit"
        android:overScrollMode="never"
        android:padding="5dp"
        android:stretchMode="columnWidth"
        android:verticalSpacing="@dimen/ow_icon_margin" >
    </GridView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:divider="@color/LightGray"
        android:orientation="horizontal"
        android:showDividers="middle" >

        <Button
            android:id="@+id/dialog_button1"
            style="@style/dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="start"
            android:layout_weight="1"
            android:maxLines="2"
            android:minHeight="45dp"
            android:text="@string/ow_dialog_cancel"
            android:textSize="14sp" >
        </Button>

        <Button
            android:id="@+id/dialog_button2"
            style="@style/dialog_button"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="end"
            android:layout_weight="1"
            android:maxLines="2"
            android:minHeight="45dp"
            android:text="@string/ow_dialog_select"
            android:textSize="14sp" >
        </Button>
    </LinearLayout>

</LinearLayout>