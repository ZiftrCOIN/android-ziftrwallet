<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/currency_list_selector"
    android:minHeight="@dimen/ow_total_icon_side_length"
    android:orientation="horizontal"
    android:padding="10dp" >

    <!-- ListRow Left side Thumbnail image -->

    <ImageView
        android:id="@+id/leftIcon"
        android:layout_width="@dimen/ow_total_icon_side_length"
        android:layout_height="@dimen/ow_total_icon_side_length"
        android:layout_alignParentLeft="true"
        android:contentDescription="@string/ow_empty_string"
        android:gravity="center_vertical"
        android:padding="@dimen/ow_bordered_icon_margin"
        android:src="@drawable/logo_bitcoin" />

    <ImageView
        android:id="@+id/rightIcon"
        android:layout_width="@dimen/ow_total_icon_side_length"
        android:layout_height="@dimen/ow_total_icon_side_length"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/ow_empty_string"
        android:gravity="center_vertical"
        android:padding="@dimen/ow_bordered_icon_margin"
        android:src="@drawable/next_down_2" />

    <ImageView
        android:id="@+id/market_graph_icon"
        android:layout_width="@dimen/zw_market_icon_size"
        android:layout_height="@dimen/zw_market_icon_size"
        android:layout_alignBottom="@id/leftIcon"
        android:layout_toRightOf="@id/leftIcon"
        android:scaleType="fitXY"
        android:src="@drawable/market_graph"
        android:visibility="gone" />

    <TextView
        android:id="@+id/topRightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/rightIcon"
        android:layout_toLeftOf="@id/rightIcon"
        android:text="@string/ow_empty_string" />

    <TextView
        android:id="@+id/bottomRightTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/rightIcon"
        android:layout_toLeftOf="@id/rightIcon"
        android:text="@string/ow_empty_string" />

    <TextView
        android:id="@+id/bottomLeftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/leftIcon"
        android:layout_toLeftOf="@id/bottomRightTextView"
        android:layout_toRightOf="@id/market_graph_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="@string/ow_empty_string" />

    <TextView
        android:id="@+id/topLeftTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/bottomLeftTextView"
        android:layout_alignTop="@id/leftIcon"
        android:layout_toRightOf="@+id/leftIcon"
        android:text="@string/ow_empty_string"
        android:textSize="15sp"
        android:textStyle="bold" />

</RelativeLayout>