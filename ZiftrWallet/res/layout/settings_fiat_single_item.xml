<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical" >

    <RelativeLayout
        style="@style/settings_bar"
        android:background="@drawable/currency_list_selector" >

        <TextView
            android:id="@+id/fiatName"
            style="@style/setting_bar_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="@string/zw_fiat_currency" />

        <ImageView
            android:layout_width="@dimen/ow_total_icon_side_length"
            android:layout_height="@dimen/ow_total_icon_side_length"
            android:layout_alignParentRight="true"
            android:padding="@dimen/ow_borderless_icon_margin"
            android:src="@drawable/previous_orange" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/orangeSoda" />

</LinearLayout>