<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/receiveCoinBaseFrameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ScrollView
        android:id="@+id/receiveCoinsContainingScrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="0dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:duplicateParentState="true"
            android:orientation="vertical" >

            <include
                android:id="@+id/walletHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                layout="@layout/_dual_icon_coin_view" />

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/ow_quarter_icon_size"
                android:background="@drawable/dropshadow" />

            <TextView
                android:id="@+id/addressNameTitleTextView"
                style="@style/send_receive_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ow_horizontal_margin"
                android:layout_marginRight="@dimen/ow_horizontal_margin"
                android:text="@string/ow_receive_coins_address_label_box_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <include
                    android:id="@+id/addressName"
                    style="@style/send_receive_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/_edit_text_shadow" />

                <ImageView
                    android:id="@+id/recallAddressFromHistoryIcon"
                    android:layout_width="@dimen/ow_total_icon_side_length"
                    android:layout_height="@dimen/ow_total_icon_side_length"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginLeft="@dimen/ow_borderless_icon_margin"
                    android:clickable="true"
                    android:contentDescription="@string/ow_empty_string"
                    android:padding="@dimen/ow_bordered_icon_margin"
                    android:src="@drawable/address_book_icon_clickable" />
            </RelativeLayout>

            <View style="@style/white_divider" />

            <TextView
                android:id="@+id/addressValueTitleTextView"
                style="@style/send_receive_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ow_horizontal_margin"
                android:layout_marginRight="@dimen/ow_horizontal_margin"
                android:text="@string/ow_receive_coins_address_value_box_title" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <EditText
                    android:id="@+id/addressValueTextView"
                    style="@style/send_receive_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/ow_edit_text_background_color"
                    android:clickable="false"
                    android:cursorVisible="false"
                    android:focusable="false"
                    android:focusableInTouchMode="true"
                    android:minHeight="@dimen/ow_edit_text_height"
                    android:paddingLeft="@dimen/ow_edit_text_padding"
                    android:paddingRight="@dimen/ow_edit_text_padding"
                    android:text="@string/ow_empty_string" >
                </EditText>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/addressValueTextView"
                    android:layout_below="@id/addressValueTextView"
                    android:contentDescription="@string/ow_empty_string"
                    android:src="@drawable/shadow_paper_left" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/addressValueTextView"
                    android:layout_below="@id/addressValueTextView"
                    android:contentDescription="@string/ow_empty_string"
                    android:src="@drawable/shadow_paper_right" />

                <ImageView
                    android:id="@+id/receiveCopyIcon"
                    android:layout_width="@dimen/ow_total_icon_side_length"
                    android:layout_height="@dimen/ow_total_icon_side_length"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="@dimen/ow_borderless_icon_margin"
                    android:clickable="true"
                    android:contentDescription="@string/ow_empty_string"
                    android:padding="@dimen/ow_bordered_icon_margin"
                    android:src="@drawable/copy_icon_clickable" />

                <ImageView
                    android:id="@+id/generateNewAddressForLabel"
                    android:layout_width="@dimen/ow_total_icon_side_length"
                    android:layout_height="@dimen/ow_total_icon_side_length"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ow_borderless_icon_margin"
                    android:clickable="true"
                    android:contentDescription="@string/ow_empty_string"
                    android:padding="@dimen/ow_bordered_icon_margin"
                    android:src="@drawable/button_plus_address_clickable" />
            </RelativeLayout>

            <View style="@style/white_divider" />

            <TextView
                android:id="@+id/receiveMessage"
                style="@style/send_receive_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/ow_horizontal_margin"
                android:text="@string/ow_receive_message_title" >
            </TextView>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content" >

                <ImageView
                    android:id="@+id/help_msg_button"
                    android:layout_width="@dimen/ow_total_icon_side_length"
                    android:layout_height="@dimen/ow_total_icon_side_length"
                    android:layout_alignParentLeft="true"
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="@dimen/ow_borderless_icon_margin"
                    android:clickable="true"
                    android:padding="@dimen/ow_bordered_icon_margin"
                    android:src="@drawable/button_help_clickable" />

                <include
                    android:id="@+id/receiveMessageContainer"
                    style="@style/send_receive_block"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    layout="@layout/_edit_text_shadow" />
            </RelativeLayout>

            <View style="@style/white_divider" />

            <include
                android:id="@+id/receiveAmountCoinFiatDualView"
                layout="@layout/_dual_text_box_with_titles" />

            <View style="@style/white_divider" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/ow_send_receive_list_block_padding_vertical" >

                <LinearLayout
                    android:id="@+id/generateAddressQrCodeContainer"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/ow_horizontal_margin"
                    android:layout_marginRight="@dimen/ow_horizontal_margin"
                    android:layout_marginTop="@dimen/ow_send_receive_list_spacing_top_margin"
                    android:background="@color/White"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/generateAddressQrCodeImageView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:adjustViewBounds="true"
                        android:clickable="false"
                        android:contentDescription="@string/ow_empty_string"
                        android:padding="@dimen/ow_total_icon_side_length"
                        android:scaleType="center"
                        android:src="@drawable/add_address_clickable" />
                </LinearLayout>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@id/generateAddressQrCodeContainer"
                    android:layout_below="@id/generateAddressQrCodeContainer"
                    android:contentDescription="@string/ow_empty_string"
                    android:src="@drawable/shadow_paper_left" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignRight="@id/generateAddressQrCodeContainer"
                    android:layout_below="@id/generateAddressQrCodeContainer"
                    android:contentDescription="@string/ow_empty_string"
                    android:src="@drawable/shadow_paper_right" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>

</FrameLayout>