<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/walletTxListDivider"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/ow_tx_list_divider_bottom_margin"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/ow_quarter_icon_size"
        android:background="@drawable/dropshadow" />

    <TextView
        android:id="@+id/walletTxListDividerTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
		style="@style/divider_label"/>

</LinearLayout>