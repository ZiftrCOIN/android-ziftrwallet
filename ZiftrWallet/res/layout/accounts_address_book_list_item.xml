<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/currency_list_selector"
    android:minHeight="@dimen/ow_total_icon_side_length"
    android:orientation="horizontal"
    android:padding="10dp" >

    <!-- ListRow Left side Thumbnail image -->

    <ImageView
        android:id="@+id/leftIcon"
        android:layout_width="@dimen/ow_medium_icon_side_length"
        android:layout_height="@dimen/ow_medium_icon_side_length"
        android:layout_alignParentLeft="true"
        android:clickable="true"
        android:contentDescription="@string/ow_empty_string"
        android:gravity="center_vertical"
        android:padding="@dimen/ow_borderless_icon_margin"
        android:src="@drawable/button_edit_pencil_clickable" />

    <ImageView
        android:id="@+id/rightIcon"
        android:layout_width="@dimen/ow_medium_icon_side_length"
        android:layout_height="@dimen/ow_medium_icon_side_length"
        android:layout_alignParentRight="true"
        android:contentDescription="@string/ow_empty_string"
        android:gravity="center_vertical"
        android:padding="@dimen/ow_bordered_icon_margin"
        android:src="@drawable/received_yellow" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toLeftOf="@id/rightIcon"
        android:layout_toRightOf="@id/leftIcon"
        android:gravity="center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/topLeftTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/ow_empty_string"
            android:textSize="@dimen/ow_txt_mediumsmall"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/bottomLeftTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clickable="false"
            android:ellipsize="end"
            android:maxLines="1"
            android:singleLine="true"
            android:text="@string/ow_empty_string" />
    </LinearLayout>

</RelativeLayout>