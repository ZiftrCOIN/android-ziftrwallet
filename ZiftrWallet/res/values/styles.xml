<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@style/Theme.AppCompat.Light">

        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
        <item name="android:actionBarStyle">@style/MyActionBar</item>

        <!-- Support library compatibility -->
        <item name="actionBarStyle">@style/MyActionBar</item>
    </style>

    <!-- Action bar theme -->
    <style name="MyActionBar" parent="@style/Widget.AppCompat.Light.ActionBar">
        <item name="android:background">@color/ow_action_bar_color</item>

        <!-- Support library compatibility -->
        <item name="background">@color/ow_action_bar_color</item>
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <!-- <item name="android:windowNoTitle">true</item> -->
        <item name="android:windowBackground">@drawable/background</item>
        <!-- serif is overriden to be ubuntuLight in ZWTypeFaceUtil -->
        <item name="android:typeface">serif</item>
    </style>

    <!-- transactions page style -->
    <style name="txn_labels">
        <item name="android:textColor">@color/Gray</item>
        <item name="android:textSize">@dimen/ow_txt_mediumsmall</item>
        <item name="android:layout_marginLeft">@dimen/ow_horizontal_margin</item>
        <item name="android:paddingBottom">@dimen/ow_tx_details_vertical_margin</item>
    </style>

    <style name="txn_values">
        <item name="android:textColor">@color/DarkGray</item>
        <item name="android:textSize">@dimen/ow_txt_medium</item>
        <item name="android:layout_marginLeft">@dimen/ow_horizontal_margin</item>
    </style>

    <style name="white_divider">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1.5dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:layout_marginLeft">@dimen/ow_total_icon_side_length</item>
        <item name="android:layout_marginRight">@dimen/ow_total_icon_side_length</item>
        <item name="android:background">@drawable/gradient_white_divider</item>
    </style>
    <!-- dialog styles -->
    <style name="dialog_title_text" parent="@android:style/TextAppearance.DialogWindowTitle">
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_button" parent="@android:attr/buttonBarButtonStyle">
        <item name="android:background">@drawable/dialog_button</item>
    </style>

    <!-- send_receive page styles -->
    <style name="send_receive_label">
        <item name="android:paddingTop">4dp</item>
        <item name="android:paddingBottom">4dp</item>
        <item name="android:textColor">@color/White</item>
        <item name="android:textSize">@dimen/ow_send_receive_label_text_size</item>
    </style>

    <style name="send_receive_block">
        <item name="android:background">@color/ow_edit_text_background_color</item>
        <item name="android:layout_marginLeft">@dimen/ow_horizontal_margin</item>
        <item name="android:layout_marginRight">@dimen/ow_horizontal_margin</item>
    </style>

    <style name="divider_label">
        <item name="android:layout_gravity">left</item>
        <item name="android:paddingLeft">@dimen/ow_tx_list_divider_padding</item>
        <item name="android:paddingBottom">@dimen/ow_tx_list_divider_padding</item>
        <item name="android:paddingRight">@dimen/ow_tx_list_divider_padding</item>
        <item name="android:text">@string/ow_tx_list_divider_default</item>
        <item name="android:textColor">@color/ow_default_text</item>
    </style>

    <style name="settings_bar">
        <item name="android:minHeight">@dimen/ow_total_icon_side_length</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">10dp</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="setting_bar_title">
        <item name="android:paddingLeft">@dimen/ow_tx_list_divider_padding</item>
        <item name="android:paddingRight">@dimen/ow_tx_list_divider_padding</item>
        <item name="android:textSize">@dimen/ow_txt_small</item>
    </style>

    <style name="drawer_menu_text">
        <item name="android:layout_gravity">center_vertical</item>
        <item name="android:layout_margin">20dp</item>
        <item name="android:textSize">@dimen/ow_txt_mediumsmall</item>
        <item name="android:textColor">@color/ow_menu_text_color</item>
    </style>

    <style name="widget_text">
        <item name="android:shadowColor">#40000000</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowDy">2</item>
        <item name="android:shadowRadius">1</item>
        <item name="android:textColor">@color/ow_default_text</item>
        <item name="android:textSize">@dimen/ow_txt_small</item>
    </style>

</resources>